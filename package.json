{
  "name": "bli",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && bun build ./src/index.ts --compile --outfile dist/bin/anomie && bun run build:pkg",
    "build:pkg": "for file in README.md LICENSE anomie.config.json; do cp $file dist; done",
    "check": "eslint \"src/**/*.ts\"",
    "format": "",
    "lint": "",
    "prepare:husky": "husky install",
    "prepare": "bun run prepare:husky"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "bnx": "^0.3.1",
    "bun-types": "latest",
    "commander": "^11.1.0",
    "eslint": "^8.55.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "listr2": "^8.0.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --cache-location .eslintcache --fix"
    ]
  }
}